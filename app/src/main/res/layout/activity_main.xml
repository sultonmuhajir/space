<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:text="SpaceX"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/teks"
        android:layout_below="@id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SpaceX merupakan aplikasi untuk menampilkan nama dan gambar dari benda-benda langit. Untuk bisa masuk ke halaman home silahkan login terlebih dahulu dengan menekan tombol 'Login' dibawah ini."
        android:textAlignment="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btn"
        android:layout_below="@+id/teks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="login"
        android:text="Login"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>